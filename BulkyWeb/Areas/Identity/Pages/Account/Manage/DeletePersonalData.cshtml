@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";               // Judul halaman
    ViewData["ActivePage"] = ManageNavPages.PersonalData;     // Menandai menu aktif pada navigasi
}

<h3>@ViewData["Title"]</h3>

<!-- Peringatan kepada user bahwa data dan akun akan dihapus permanen -->
<div class="alert alert-warning" role="alert">
    <p>
        <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
    </p>
</div>

<div>
    <!-- Form untuk menghapus akun -->
    <form id="delete-user" method="post">
        <!-- Tampilkan error validasi jika ada -->
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

        <!-- Jika user harus memasukkan password untuk verifikasi -->
        @if (Model.RequirePassword)
        {
            <div class="form-floating mb-3">
                <!-- Input password -->
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Please enter your password." />
                <label asp-for="Input.Password" class="form-label"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }

        <!-- Tombol submit untuk menghapus data dan akun -->
        <button class="w-100 btn btn-lg btn-danger" type="submit">Delete data and close my account</button>
    </form>
</div>

@section Scripts {
    <!-- Mengaktifkan validasi client-side -->
    <partial name="_ValidationScriptsPartial" />
}