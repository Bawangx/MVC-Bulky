@page
@model GenerateRecoveryCodesModel

@{
    // Judul halaman
    ViewData["Title"] = "Generate two-factor authentication (2FA) recovery codes";

    // Menentukan halaman aktif di menu navigasi
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<!-- Komponen partial untuk menampilkan pesan status (sukses/gagal) -->
<partial name="_StatusMessage" for="StatusMessage" />

<!-- Judul utama halaman -->
<h3>@ViewData["Title"]</h3>

<!-- Peringatan penting bagi user -->
<div class="alert alert-warning" role="alert">
    <p>
        <span class="glyphicon glyphicon-warning-sign"></span>
        <strong>Put these codes in a safe place.</strong>
    </p>
    <p>
        If you lose your device and don't have the recovery codes you will lose access to your account.
    </p>
    <p>
        Generating new recovery codes does not change the keys used in authenticator apps.
        If you wish to change the key used in an authenticator app you should
        <a asp-page="./ResetAuthenticator">reset your authenticator keys.</a>
    </p>
</div>

<!-- Form sederhana untuk memicu proses generate recovery codes -->
<div>
    <form method="post">
        <!-- Tombol submit untuk menghasilkan kode recovery baru -->
        <button class="btn btn-danger" type="submit">Generate Recovery Codes</button>
    </form>
</div>