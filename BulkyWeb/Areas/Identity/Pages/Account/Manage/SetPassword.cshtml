@page
@model SetPasswordModel

@{
    // Judul halaman yang akan ditampilkan pada tab browser dan header
    ViewData["Title"] = "Set password";
    // Menandai halaman ini sebagai halaman aktif untuk navigasi
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h3>Set your password</h3>

<!-- Partial view untuk menampilkan pesan status seperti sukses/gagal -->
<partial name="_StatusMessage" for="StatusMessage" />

<!-- Informasi untuk pengguna bahwa mereka belum memiliki password lokal -->
<p class="text-info">
    You do not have a local username/password for this site. Add a local
    account so you can log in without an external login.
</p>

<div class="row">
    <div class="col-md-6">
        <!-- Form untuk mengatur password baru, method POST untuk submit data -->
        <form id="set-password-form" method="post">
            <!-- Tempat menampilkan ringkasan error validasi model (jika ada) -->
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <!-- Input untuk password baru dengan label dan validasi -->
            <div class="form-floating mb-3">
                <input asp-for="Input.NewPassword"
                       class="form-control"
                       autocomplete="new-password"
                       placeholder="Please enter your new password." />
                <label asp-for="Input.NewPassword" class="form-label"></label>
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>

            <!-- Input untuk konfirmasi password baru dengan label dan validasi -->
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword"
                       class="form-control"
                       autocomplete="new-password"
                       placeholder="Please confirm your new password." />
                <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <!-- Tombol submit untuk mengirim form -->
            <button type="submit" class="w-100 btn btn-lg btn-primary">Set password</button>
        </form>
    </div>
</div>

@section Scripts {
    <!-- Meng-include partial untuk skrip validasi client-side otomatis -->
    <partial name="_ValidationScriptsPartial" />
}