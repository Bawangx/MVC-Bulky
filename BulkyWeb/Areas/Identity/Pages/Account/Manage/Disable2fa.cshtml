@page
@model Disable2faModel
@{
    ViewData["Title"] = "Disable two-factor authentication (2FA)";
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication; // Set halaman aktif pada navigasi
}

<!-- Tampilkan pesan status jika ada -->
<partial name="_StatusMessage" for="StatusMessage" />

<h3>@ViewData["Title"]</h3>

<!-- Peringatan untuk user -->
<div class="alert alert-warning" role="alert">
    <p>
        <strong>This action only disables 2FA.</strong> <!-- Informasi penting -->
    </p>
    <p>
        Disabling 2FA does not change the keys used in authenticator apps. If you wish to change the key
        used in an authenticator app you should <a asp-page="./ResetAuthenticator">reset your authenticator keys.</a> <!-- Link ke halaman reset -->
    </p>
</div>

<!-- Form untuk mengirimkan permintaan POST menonaktifkan 2FA -->
<div>
    <form method="post">
        <button class="btn btn-danger" type="submit">Disable 2FA</button> <!-- Tombol submit -->
    </form>
</div>