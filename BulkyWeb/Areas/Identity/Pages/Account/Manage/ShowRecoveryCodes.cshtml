@page
@model ShowRecoveryCodesModel
@{
    ViewData["Title"] = "Recovery codes";
    ViewData["ActivePage"] = "TwoFactorAuthentication"; // Memberi tanda halaman aktif pada menu navigasi
}

<partial name="_StatusMessage" for="StatusMessage" />

<h3>@ViewData["Title"]</h3>

<!-- Pemberitahuan penting untuk user menyimpan recovery codes dengan aman -->
<div class="alert alert-warning" role="alert">
    <p><strong>Put these codes in a safe place.</strong></p>
    <p>If you lose your device and don't have the recovery codes you will lose access to your account.</p>
</div>

<div class="row">
    <div class="col-md-12">
        <!-- Menampilkan recovery codes dua per baris -->
        @for (var i = 0; i < Model.RecoveryCodes.Length; i += 2)
        {
            <code class="recovery-code">@Model.RecoveryCodes[i]</code>
        
            <text>&nbsp;</text>
            <code class="recovery-code">@Model.RecoveryCodes[i + 1]</code>

            <br />
        }
    </div>
</div>