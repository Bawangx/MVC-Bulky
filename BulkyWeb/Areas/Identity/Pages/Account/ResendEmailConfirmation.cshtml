@page
@model ResendEmailConfirmationModel

@{
    ViewData["Title"] = "Resend email confirmation";
}

<h1>@ViewData["Title"]</h1>
<h2>Enter your email.</h2>
<hr />

<div class="row">
    <div class="col-md-4">
        <!-- Form untuk input email yang akan dikirim ulang konfirmasi emailnya -->
        <form method="post">
            <!-- Menampilkan ringkasan validasi error di atas form -->
            <div asp-validation-summary="All" class="text-danger" role="alert"></div>

            <!-- Input email dengan fitur floating label -->
            <div class="form-floating mb-3">
                <!-- Binding ke properti Input.Email di PageModel -->
                <input asp-for="Input.Email"
                       class="form-control"
                       aria-required="true"
                       placeholder="name@example.com" />
                <!-- Label yang mengambang saat fokus/terisi -->
                <label asp-for="Input.Email" class="form-label"></label>
                <!-- Validasi spesifik untuk input email -->
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <!-- Tombol submit dengan style bootstrap -->
            <button type="submit" class="w-100 btn btn-lg btn-primary">Resend</button>
        </form>
    </div>
</div>

<!-- Section untuk menyisipkan skrip validasi client-side -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}