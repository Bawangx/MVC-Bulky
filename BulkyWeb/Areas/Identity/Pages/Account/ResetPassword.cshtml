@* Model halaman yang meng-handle reset password *@
@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";  // Judul halaman
}

<!-- Judul utama -->
<h1>@ViewData["Title"]</h1>
<h2>Reset your password.</h2>
<hr />

<div class="row">
    <div class="col-md-4">
        <!-- Form untuk reset password -->
        <form method="post">
            <!-- Menampilkan ringkasan validasi model error jika ada -->
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <!-- Input tersembunyi untuk token reset password -->
            <input asp-for="Input.Code" type="hidden" />

            <!-- Input email -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>  <!-- Validasi email -->
            </div>

            <!-- Input password baru -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Please enter your password." />
                <label asp-for="Input.Password" class="form-label"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>  <!-- Validasi password -->
            </div>

            <!-- Konfirmasi password baru -->
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Please confirm your password." />
                <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>  <!-- Validasi konfirmasi password -->
            </div>

            <!-- Tombol submit -->
            <button type="submit" class="w-100 btn btn-lg btn-primary">Reset</button>
        </form>
    </div>
</div>

<!-- Section untuk script validasi jQuery unobtrusive -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
