@page
@model ForgotPasswordModel
@{
    // Judul halaman yang akan ditampilkan di tag <title> dan <h1>
    ViewData["Title"] = "Forgot your password?";
}

<h1>@ViewData["Title"]</h1>
<h2>Enter your email.</h2>
<hr />

<div class="row">
    <div class="col-md-4">
        <!-- Form untuk memasukkan email pengguna -->
        <form method="post">
            <!-- Menampilkan ringkasan validasi jika ada error -->
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <!-- Input email dengan fitur floating label Bootstrap -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Email"
                       class="form-control"
                       autocomplete="username"
                       aria-required="true"
                       placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <!-- Tombol submit untuk mengirim permintaan reset password -->
            <button type="submit" class="w-100 btn btn-lg btn-primary">Reset Password</button>
        </form>
    </div>
</div>

@section Scripts {
    <!-- Memuat partial view untuk validasi client-side -->
    <partial name="_ValidationScriptsPartial" />
}