@model Category

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-danger bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <!-- Judul halaman untuk hapus kategori -->
                <h2 class="text-white py-2">Delete Category</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form method="post">
            <!-- Menyembunyikan Id kategori untuk dikirim saat submit -->
            <input asp-for="Id" type="hidden" />

            <div class="border p-3">
                <!-- Menampilkan nama kategori tapi disabled agar tidak bisa diubah -->
                <div class="form-floating py-2 col-12">
                    <input asp-for="Name" class="form-control border-0 shadow" placeholder=" " disabled />
                    <label asp-for="Name"></label>
                </div>

                <!-- Menampilkan urutan tampilan kategori tapi disabled -->
                <div class="form-floating py-2 col-12">
                    <input asp-for="DisplayOrder" class="form-control border-0 shadow" placeholder=" " disabled />
                    <label asp-for="DisplayOrder"></label>
                </div>

                <!-- Tombol aksi untuk submit form hapus -->
                <div class="row pt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <!-- Tombol untuk kembali ke daftar kategori -->
                        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary border form-control">
                            Back To List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>