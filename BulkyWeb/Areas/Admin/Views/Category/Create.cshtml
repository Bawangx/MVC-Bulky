@model Category

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <!-- Judul halaman -->
                <h2 class="text-white py-2">Create Category</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form method="post">
            <div class="border p-3">

                <!-- Tempat menampilkan ringkasan error validasi model -->
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Input Nama Kategori -->
                <div class="form-floating py-2 col-12">
                    <input asp-for="Name" class="form-control border-0 shadow" placeholder=" " />
                    <label asp-for="Name"></label>
                    <span asp-validation-for="Name" class="text-danger"></span> <!-- pesan error validasi -->
                </div>

                <!-- Input Urutan Tampilan Kategori -->
                <div class="form-floating py-2 col-12">
                    <input asp-for="DisplayOrder" class="form-control border-0 shadow" placeholder=" " />
                    <label asp-for="DisplayOrder"></label>
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span> <!-- pesan error validasi -->
                </div>

                <!-- Tombol aksi -->
                <div class="row pt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Create</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <!-- Link kembali ke daftar kategori -->
                        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-primary border form-control">
                            Back To List
                        </a>
                    </div>
                </div>

            </div>
        </form>
    </div>
</div>

@section Scripts {
    <!-- Partial untuk validasi client-side -->
    <partial name="_ValidationScriptsPartial" />
}