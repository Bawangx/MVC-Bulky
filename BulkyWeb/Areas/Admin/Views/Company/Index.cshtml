@* Menampilkan notifikasi jika ada *@
<partial name="_Notification" />

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Company List</h2> <!-- Judul halaman -->
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6"></div>
            <div class="col-6 text-end">
                <!-- Tombol untuk membuat data company baru -->
                <a asp-controller="Company" asp-action="Upsert" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create New Company
                </a>
            </div>
        </div>

        <!-- Tabel data company -->
        <table id="tbData" class="table table-bordered table-striped w-100 align-content-center">
            <thead>
                <tr>
                    <th>Name</th>           <!-- Nama perusahaan -->
                    <th>Address</th>        <!-- Alamat -->
                    <th>City</th>           <!-- Kota -->
                    <th>State</th>          <!-- Provinsi/Negara bagian -->
                    <th>Phone Number</th>   <!-- Nomor telepon -->
                    <th></th>               <!-- Kolom aksi (edit/delete) -->
                </tr>
            </thead>
            <tbody>
                @* Data akan dimuat secara dinamis via AJAX DataTables *@
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <!-- Script untuk mengatur DataTables dan interaksi tabel -->
    <script src="~/js/company.js"></script>
}