@page
@model BulkyWebRazor_Temp.Pages.Categories.EditModel

<form method="post">
    @* Hidden input untuk menyimpan Id kategori agar bisa di-submit saat update *@
    <input asp-for="Category.Id" type="hidden" />

    <div class="row p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Category</h2>
            <hr />
        </div>

        @* Form input untuk nama kategori *@
        <div class="mb-3 row p-1">
            <label asp-for="Category.Name" class="p-0"></label>
            <input asp-for="Category.Name" class="form-control" />
            @* Menampilkan pesan validasi jika ada error pada field ini *@
            <span asp-validation-for="Category.Name" class="text-danger"></span>
        </div>

        @* Form input untuk display order kategori *@
        <div class="mb-3 row p-1">
            <label asp-for="Category.DisplayOrder" class="p-0"></label>
            <input asp-for="Category.DisplayOrder" class="form-control" />
            @* Menampilkan pesan validasi jika ada error pada field ini *@
            <span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                @* Tombol submit untuk mengirim form dan update data kategori *@
                <button type="submit" class="btn btn-primary form-control">Update</button>
            </div>
            <div class="col-6 col-md-3">
                @* Link untuk kembali ke daftar kategori tanpa melakukan update *@
                <a asp-page="/categories/index" class="btn btn-outline-secondary border form-control">
                    Back To List
                </a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @* Partial view untuk memuat skrip validasi client-side *@
    <partial name="_ValidationScriptsPartial" />
}