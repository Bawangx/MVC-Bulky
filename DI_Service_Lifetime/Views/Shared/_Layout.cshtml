<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <!-- Mengatur viewport agar responsive di perangkat mobile -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Title halaman, menggunakan ViewData["Title"] yang di-set di tiap View -->
    <title>@ViewData["Title"] - DI_Service_Lifetime</title>

    <!-- Menghubungkan Bootstrap CSS dari folder wwwroot/lib/bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- CSS khusus situs, dengan cache busting (asp-append-version) -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- CSS khusus proyek ini -->
    <link rel="stylesheet" href="~/DI_Service_Lifetime.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <!-- Navbar menggunakan Bootstrap -->
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <!-- Link ke Home dengan Tag Helper asp-controller dan asp-action -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">DI_Service_Lifetime</a>

                <!-- Tombol toggle navbar untuk mobile -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Menu navigasi -->
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <!-- Link Home -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <!-- Link Privacy -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Kontainer utama untuk isi halaman -->
    <div class="container">
        <main role="main" class="pb-3">
            <!-- Tempat konten view akan ditampilkan -->
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - DI_Service_Lifetime -
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Script JS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Section Scripts opsional, untuk menambahkan script khusus di halaman tertentu -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>